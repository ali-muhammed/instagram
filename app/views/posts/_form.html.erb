<%= form_with model:@post, local: true) do |f| %>
	<% if @post.errors.any? %>
    	<div class="errors">
      	Total errors: <%= @post.errors.count %>
      	<ul>
        	<% @post.errors.full_messages.each do |message| %>
            	<li><%= message %></li>
        	<% end %>
      	</ul>
    	</div>
	<% end %>

  <div>
    <%= f.label :picture %><br/>
    <%= f.file_field :picture, multiple: true %>
  </div><br>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  
	<div>
  	<%= f.submit %>
	</div>
<% end %>  